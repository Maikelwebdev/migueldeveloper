---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const projects = [
  {
    title: "migueldeveloper.es",
    url: "http://migueldeveloper.es",
    description: "This is my final thesis, a research project where I achieved a score of 9/10 by showcasing several key features. These include real-time querying of cryptocurrency prices through an API, establishing a connection with a digital wallet for \"web3 login,\" accessing concealed information post-wallet connection, executing cryptocurrency transactions, and tracking transactions on the blockchain.",
    image: "/assets/miguelpes.PNG"
  },
  {
    title: "makelenller.com",
    url: "http://makelenller.com",
    description: "Just as Da Vinci excelled in mathematics and logic, he was also a master in the arts. I aspire to follow in his footsteps, dedicating over 15 years of my life to nurturing my artistic-musical side. Competing at the national level in Spain and performing in numerous concerts, I seek to cultivate my skills and creative expression, inspired by the example of one of history's great geniuses. You can explore my artistic journey further on my website.",
    image: "/assets/makepcom.PNG"
  }
];
---

<Layout title="Projects - Migueldeveloper">
  <main class="flex-shrink-0">
    <Navbar currentPage="projects" />
    
    <section class="py-5">
      <div class="container px-5 mb-5">
        <div class="text-center mb-5">
          <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Projects</span></h1>
        </div>
        <div class="row gx-5 justify-content-center">
          <div class="col-lg-11 col-xl-9 col-xxl-8">
            {projects.map((project) => (
              <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
                <div class="card-body p-0">
                  <div class="sm-none d-md-flex align-items-center">
                    <div class="p-5">
                      <h2 class="fw-bolder">
                        <a href={project.url} target="_blank" rel="noopener noreferrer">{project.title}</a>
                      </h2>
                      <p>{project.description}</p>
                    </div>
                    <img class="img-fluid" src={project.image} alt={project.title} />
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <section class="py-4 bg-gradient-primary-to-secondary text-white">
      <div class="container px-md-5 my-4">
        <div class="text-center">
          <h2 class="display-4 fw-bolder mb-3">Let's Build Something Amazing Together</h2>
          <p class="lead mb-3">Unlock the full potential of your project. I'm here to turn your ideas into reality.</p>
          <a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" href="/contact">Get in Touch</a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
