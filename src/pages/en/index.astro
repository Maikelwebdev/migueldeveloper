                      {skills.itSystems.map((skill) => (
                        <div class="col">
                          <div class="d-flex align-items-center bg-light rounded-4 p-3 h-100">{skill}</div>
                        </div>
                      ))}
                    </div>
                  </div>

                  <div class="mb-0">
                    <div class="d-flex align-items-center mb-4">
                      <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 me-3">
                        <i class="bi bi-briefcase"></i>
                      </div>
                      <h3 class="fw-bolder mb-0"><span class="text-gradient d-inline">Business & Strategy</span></h3>
                    </div>
                    <div class="row row-cols-2 row-cols-md-3 g-2">
                      {skills.business.map((skill) => (
                        <div class="col">
                          <div class="d-flex align-items-center bg-light rounded-4 p-3 h-100">{skill}</div>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
