---
const navItems = [
  { href: "#home", labelKey: "nav.home", key: "home" },
  { href: "#projects", labelKey: "nav.projects", key: "projects" },
  { href: "#resume", labelKey: "nav.resume", key: "resume" },
  { href: "#contact", labelKey: "nav.contact", key: "contact" },
];

const currentLang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
const otherLang = currentLang === 'es' ? 'en' : 'es';
const otherLangUrl = otherLang === 'en' ? '/en' : '/';
---

<nav class="navbar fixed-top" id="mainNav">
  <div class="container px-4">
    <a class="navbar-brand" href={currentLang === 'es' ? '/' : '/en'}><span class="fw-bolder text-primary">migueldeveloper.com</span></a>
    
    <div class="d-flex align-items-center gap-2">
      <div class="lang-selector d-none d-md-flex">
        <a href="/" class={`lang-btn ${currentLang === 'es' ? 'active' : ''}`}>ES</a>
        <a href="/en" class={`lang-btn ${currentLang === 'en' ? 'active' : ''}`}>EN</a>
      </div>
      
      <button class="theme-toggle" aria-label="Toggle theme" id="themeToggle">
        <span class="theme-icon" id="themeIcon">
          <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
          <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </span>
      </button>
      
      <ul class="navbar-nav d-none d-lg-flex flex-row gap-1">
        {navItems.map((item) => (
          <li class="nav-item">
            <a class="nav-link" href={item.href} data-i18n={item.labelKey} data-section={item.key}></a>
          </li>
        ))}
      </ul>
      
      <button class="mobile-menu-toggle d-lg-none" type="button" aria-label="Toggle menu" id="menuToggle">
        <span class="toggler-icon">
          <span></span>
          <span></span>
          <span></span>
        </span>
      </button>
    </div>
    
    <div class="mobile-nav" id="mobileNav">
      <ul class="mobile-nav-list">
        {navItems.map((item) => (
          <li class="nav-item">
            <a class="nav-link" href={item.href} data-i18n={item.labelKey} data-section={item.key}></a>
          </li>
        ))}
        <li class="nav-item d-md-none">
          <div class="lang-selector-mobile">
            <a href="/" class={`lang-btn ${currentLang === 'es' ? 'active' : ''}`}>ES</a>
            <a href="/en" class={`lang-btn ${currentLang === 'en' ? 'active' : ''}`}>EN</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script is:inline>
  const translations = {
    es: {
      "nav.home": "Inicio",
      "nav.projects": "Proyectos",
      "nav.resume": "CV",
      "nav.contact": "Contacto"
    },
    en: {
      "nav.home": "Home",
      "nav.projects": "Projects",
      "nav.resume": "Resume",
      "nav.contact": "Contact"
    }
  };

  window.translations = translations;

  function initApp() {
    console.log('Initializing app...');
    initTheme();
    updateThemeIcon();
    applyAllTranslations();
    initMobileMenu();
    initActiveSection();
    
    document.getElementById('themeToggle').onclick = toggleTheme;
  }

  function initActiveSection() {
    const sections = ['home', 'projects', 'resume', 'contact'];
    const navLinks = document.querySelectorAll('.mobile-nav .nav-link, .navbar-nav .nav-link');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const sectionId = entry.target.id;
          navLinks.forEach(link => {
            link.classList.remove('active');
            if (link.getAttribute('data-section') === sectionId) {
              link.classList.add('active');
            }
          });
        }
      });
    }, { threshold: 0.5, rootMargin: '-20% 0px -50% 0px' });

    sections.forEach(id => {
      const section = document.getElementById(id);
      if (section) observer.observe(section);
    });

    if (document.getElementById('home')) {
      document.getElementById('home').classList.add('active');
    }
  }

  function initTheme() {
    const savedTheme = localStorage.getItem('theme');
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const theme = savedTheme || (prefersDark ? 'dark' : 'light');
    document.documentElement.setAttribute('data-theme', theme);
  }

  function initMobileMenu() {
    const menuToggle = document.getElementById('menuToggle');
    const mobileNav = document.getElementById('mobileNav');
    const navLinks = document.querySelectorAll('.mobile-nav .nav-link');
    
    menuToggle.onclick = function() {
      mobileNav.classList.toggle('open');
      menuToggle.classList.toggle('active');
    };
    
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileNav.classList.remove('open');
        menuToggle.classList.remove('active');
      });
    });
    
    document.addEventListener('click', (e) => {
      if (!mobileNav.contains(e.target) && !menuToggle.contains(e.target) && mobileNav.classList.contains('open')) {
        mobileNav.classList.remove('open');
        menuToggle.classList.remove('active');
      }
    });
  }

  function updateThemeIcon() {
    const iconContainer = document.getElementById('themeIcon');
    if (!iconContainer) return;
    
    const theme = document.documentElement.getAttribute('data-theme');
    if (theme === 'dark') {
      iconContainer.classList.add('dark');
    } else {
      iconContainer.classList.remove('dark');
    }
  }

  function toggleTheme() {
    const current = document.documentElement.getAttribute('data-theme');
    const next = current === 'dark' ? 'light' : 'dark';
    const toggleBtn = document.getElementById('themeToggle');
    const iconContainer = document.getElementById('themeIcon');
    
    toggleBtn.classList.add('animating');
    iconContainer.classList.add('switching');
    
    setTimeout(() => {
      document.documentElement.setAttribute('data-theme', next);
      localStorage.setItem('theme', next);
      updateThemeIcon();
    }, 400);
    
    setTimeout(() => {
      toggleBtn.classList.remove('animating');
      iconContainer.classList.remove('switching');
    }, 800);
  }

  function applyAllTranslations() {
    const lang = localStorage.getItem('lang') || 'es';
    
    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (key && translations[lang]?.[key]) {
        el.textContent = translations[lang][key];
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initApp);
  document.addEventListener('astro:page-load', initApp);
  window.toggleTheme = toggleTheme;
</script>

<style>
  .navbar {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    background-color: var(--bg-color) !important;
    transition: background-color 0.3s ease, backdrop-filter 0.3s ease;
    z-index: 1030;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--glass-border);
  }

  .container {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
  }

  .navbar-brand {
    z-index: 1001;
  }

  .theme-toggle {
    width: 44px;
    height: 44px;
    border: none;
    background: transparent;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    color: var(--text-color);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1001;
  }

  .theme-toggle:hover {
    background-color: var(--bg-secondary);
    transform: scale(1.1);
  }

  .theme-toggle.animating {
    animation: themePulse 0.8s ease-in-out;
  }

  @keyframes themePulse {
    0% { transform: scale(1) rotate(0deg); }
    25% { transform: scale(1.2) rotate(90deg); }
    50% { transform: scale(1.2) rotate(180deg); }
    75% { transform: scale(1.2) rotate(270deg); }
    100% { transform: scale(1) rotate(360deg); }
  }

  .theme-icon {
    position: relative;
    width: 20px;
    height: 20px;
  }

  .theme-icon svg {
    position: absolute;
    top: 0;
    left: 0;
    transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .sun-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  .moon-icon {
    opacity: 0;
    transform: rotate(-90deg) scale(0);
  }

  .theme-icon.dark .sun-icon {
    opacity: 0;
    transform: rotate(90deg) scale(0);
  }

  .theme-icon.dark .moon-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  .theme-icon.switching .sun-icon,
  .theme-icon.switching .moon-icon {
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .lang-selector {
    gap: 4px;
    z-index: 1001;
  }

  .lang-btn {
    width: 36px;
    height: 36px;
    border: none;
    background: transparent;
    cursor: pointer;
    font-weight: 600;
    font-size: 0.85rem;
    color: var(--text-muted);
    border-radius: 6px;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .lang-btn:hover {
    background-color: var(--bg-secondary);
    color: var(--text-color);
  }

  .lang-btn.active {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
  }

  .nav-link {
    position: relative;
    padding: 0.5rem 1rem !important;
    transition: color 0.3s ease;
    color: var(--text-color);
    text-decoration: none;
  }

  .nav-link:hover {
    color: var(--primary) !important;
  }

  .nav-link.active {
    color: var(--primary) !important;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 3px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
    border-radius: 2px;
  }

  .mobile-menu-toggle {
    display: none;
    border: none;
    padding: 0.5rem;
    width: 44px;
    height: 44px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 5px;
    background: transparent !important;
    cursor: pointer;
    z-index: 1001;
  }

  .mobile-menu-toggle:focus {
    outline: none;
  }

  .toggler-icon {
    width: 22px;
    height: 16px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .toggler-icon span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: var(--text-color);
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .mobile-menu-toggle.active .toggler-icon span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active .toggler-icon span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active .toggler-icon span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  .mobile-nav {
    display: none;
  }

  @media (max-width: 991px) {
    .mobile-menu-toggle {
      display: flex;
    }

    .mobile-nav {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: var(--bg-color);
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
      transition: all 0.4s cubic-bezier(0.68, -0.15, 0.27, 1.15);
      padding-top: 100px;
    }

    .mobile-nav.open {
      opacity: 1;
      visibility: visible;
    }

    .mobile-nav-list {
      list-style: none;
      padding: 0;
      margin: 0;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }

    .mobile-nav .nav-link {
      font-size: 2rem;
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.3s ease;
    }

    .mobile-nav.open .nav-link {
      opacity: 1;
      transform: translateY(0);
    }

    .mobile-nav.open .nav-link:nth-child(1) { transition-delay: 0.1s; }
    .mobile-nav.open .nav-link:nth-child(2) { transition-delay: 0.15s; }
    .mobile-nav.open .nav-link:nth-child(3) { transition-delay: 0.2s; }
    .mobile-nav.open .nav-link:nth-child(4) { transition-delay: 0.25s; }

    .lang-selector-mobile {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
    }

    .lang-selector-mobile .lang-btn {
      font-size: 1.25rem;
      padding: 0.5rem 1rem;
    }
  }

  @media (min-width: 992px) {
    .mobile-nav {
      display: block;
    }
    
    .mobile-nav ul {
      display: flex;
      gap: 0.5rem;
      margin: 0;
      padding: 0;
      list-style: none;
    }
  }
</style>
