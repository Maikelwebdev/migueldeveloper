---
interface Props {
  currentPage?: string;
}

const { currentPage = "home" } = Astro.props;

const navItems = [
  { href: "/", labelKey: "nav.home", key: "home" },
  { href: "/resume", labelKey: "nav.resume", key: "resume" },
  { href: "/projects", labelKey: "nav.projects", key: "projects" },
  { href: "/contact", labelKey: "nav.contact", key: "contact" },
];
---

<nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top" id="mainNav">
  <div class="container px-5">
    <a class="navbar-brand" href="/"><span class="fw-bolder text-primary">migueldeveloper.com</span></a>
    
    <div class="d-flex align-items-center gap-2">
      <div class="lang-selector d-none d-lg-flex">
        <button class="lang-btn" id="langEs" onclick="window.setLang('es')">ES</button>
        <button class="lang-btn" id="langEn" onclick="window.setLang('en')">EN</button>
      </div>
      
      <button class="theme-toggle" onclick="window.toggleTheme()" aria-label="Toggle theme">
        <i class="bi bi-sun-fill" id="themeIcon"></i>
      </button>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
    
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small fw-bolder">
        {navItems.map((item) => (
          <li class="nav-item">
            <a class={`nav-link ${currentPage === item.key ? "active" : ""}`} href={item.href} data-i18n={item.labelKey}></a>
          </li>
        ))}
        <li class="nav-item d-lg-none">
          <div class="lang-selector-mobile d-flex gap-2 mt-3 justify-content-center">
            <button class="lang-btn" onclick="window.setLang('es')">ES</button>
            <button class="lang-btn" onclick="window.setLang('en')">EN</button>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script is:inline>
  document.addEventListener('astro:page-load', () => {
    updateThemeIcon();
    updateActiveLang();
    applyTranslations();
  });

  function updateThemeIcon() {
    const icon = document.getElementById('themeIcon');
    if (!icon) return;
    
    const theme = document.documentElement.getAttribute('data-theme');
    if (theme === 'dark') {
      icon.classList.remove('bi-sun-fill');
      icon.classList.add('bi-moon-fill');
    } else {
      icon.classList.remove('bi-moon-fill');
      icon.classList.add('bi-sun-fill');
    }
  }

  function updateActiveLang() {
    const lang = localStorage.getItem('lang') || 'es';
    document.getElementById('langEs')?.classList.toggle('active', lang === 'es');
    document.getElementById('langEn')?.classList.toggle('active', lang === 'en');
  }

  function applyTranslations() {
    const lang = localStorage.getItem('lang') || 'es';
    const translations = {
      es: {
        "nav.home": "Inicio",
        "nav.resume": "CV",
        "nav.projects": "Proyectos",
        "nav.contact": "Contacto"
      },
      en: {
        "nav.home": "Home",
        "nav.resume": "Resume",
        "nav.projects": "Projects",
        "nav.contact": "Contact"
      }
    };

    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (key && translations[lang]?.[key]) {
        el.textContent = translations[lang][key];
      }
    });
  }

  window.toggleTheme = function() {
    const current = document.documentElement.getAttribute('data-theme');
    const next = current === 'dark' ? 'light' : 'dark';
    document.documentElement.setAttribute('data-theme', next);
    localStorage.setItem('theme', next);
    updateThemeIcon();
  };

  window.setLang = function(lang) {
    localStorage.setItem('lang', lang);
    document.documentElement.lang = lang;
    window.location.reload();
  };
</script>

<style>
  .navbar {
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.9) !important;
    transition: all 0.3s ease;
  }

  [data-theme="dark"] .navbar {
    background-color: rgba(15, 15, 15, 0.9) !important;
  }

  .theme-toggle {
    width: 44px;
    height: 44px;
    border: none;
    background: transparent;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 1.25rem;
    color: var(--text-color);
    transition: background-color 0.3s ease;
  }

  .theme-toggle:hover {
    background-color: var(--bg-secondary);
  }

  .lang-selector {
    gap: 4px;
  }

  .lang-btn {
    width: 36px;
    height: 36px;
    border: none;
    background: transparent;
    cursor: pointer;
    font-weight: 600;
    font-size: 0.85rem;
    color: var(--text-muted);
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .lang-btn:hover {
    background-color: var(--bg-secondary);
    color: var(--text-color);
  }

  .lang-btn.active {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
  }

  .nav-link {
    position: relative;
    padding: 0.5rem 1rem !important;
  }

  .nav-link.active {
    color: var(--primary) !important;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 3px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
    border-radius: 2px;
  }

  .navbar-toggler {
    border: none;
    padding: 0.5rem;
  }

  .navbar-toggler:focus {
    box-shadow: none;
  }

  @media (max-width: 991px) {
    .navbar-collapse {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: var(--bg-color);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .navbar-collapse.show {
      opacity: 1;
      visibility: visible;
    }

    .navbar-collapse .navbar-nav {
      text-align: center;
    }

    .navbar-collapse .nav-link {
      font-size: 1.5rem;
      padding: 1rem !important;
    }

    .navbar-collapse.show + .navbar-toggler,
    .navbar-toggler[aria-expanded="true"] {
      position: relative;
      z-index: 1001;
    }
  }
</style>
